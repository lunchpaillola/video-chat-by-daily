{
  "displayName": "Video Chat by Daily",
  "defaultWidth": 600,
  "defaultHeight": 500,
  "components": "./index.js",
  "resizeY": true,
  "resizeX": true,
  "icon": "./video-thumbnail.png",
  "props": [
    {
      "name": "apikey",
      "displayName": "Your Daily API key",
      "type": "text",
      "helpText": "Sign up at daily.co for the api key"
    }
  ],
  "childComponents": [
    {
      "name": "videoCall",
      "displayName": "Video Call",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": true
        },
        {
          "name": "url",
          "displayName": "Room url",
          "type": "text"
        },
        {
          "name": "token",
          "displayName": "Meeting token",
          "type": "text",
          "helpText": "Optional. Meeting Tokens configure the video session on a per-user basis."
        },
        {
          "name": "leftMeeting",
          "displayName": "Actions after participant leaves the meeting",
          "type": "action"
        },
        {
          "name": "joinedMeeting",
          "displayName": "Actions after the participant joins the meeting" ,
          "type": "action"
        },
        {
          "name": "modifyRoomColors",
          "displayName": "Show video room colors",
          "type": "boolean",
          "default": false
      },
       {
          "name": "accent",
          "displayName": "Accent",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "modifyRoomColors": true
          }
        },
        {
          "name": "accentText",
          "displayName": "Accent text",
          "type": "color",
          "default": "@contrast:accent",
          "enabled": {
            "modifyRoomColors": true
          }
        },
        {
          "name": "background",
          "displayName": "Background",
          "type": "color",
          "default": "@background",
          "enabled": {
            "modifyRoomColors": true
          }
        },
        {
          "name": "backgroundAccent",
          "displayName": "Background accent",
          "type": "color",
          "default": "@background",
          "enabled": {
            "modifyRoomColors": true
          }
        },
        {
          "name": "baseText",
          "displayName": "baseText",
          "default": "@text",
          "type": "color",
          "enabled": {
            "modifyRoomColors": true
          }
        },
        {
          "name": "border",
          "displayName": "Border",
          "default": "@background",
          "type": "color",
          "enabled": {
            "modifyRoomColors": true
          }
        },
        {
          "name": "mainAreaBg",
          "displayName": "Main area background",
          "default": "@background",
          "type": "color",
          "enabled": {
            "modifyRoomColors": true
          }
        },
        {
          "name": "mainAreaBgAccent",
          "displayName": "Main area background accent",
          "default": "@background",
          "type": "color",
          "enabled": {
            "modifyRoomColors": true
          }
        },
        {
          "name": "mainAreaText",
          "displayName": "Main area text",
          "default": "@text",
          "type": "color",
          "enabled": {
            "modifyRoomColors": true
          }
        },
        {
          "name": "supportiveText",
          "displayName": "Supportive text",
          "default": "@text",
          "type": "color",
          "enabled": {
            "modifyRoomColors": true
          }
        }
      ]
    },
    {
      "name": "createRoomButton",
      "displayName": "Create Room Button",
      "props": [{
        "name": "enabled",
        "type": "boolean",
        "default": false
      },
      {
        "name": "privacy",
				 "displayName": "Privacy",
        "type": "text",
        "default": "public",
        "control": {
          "type": "menu",
          "options": [
            { "label": "public", "value": "public" },
            { "label": "private", "value": "private" }
          ]
        }
      },
      {
        "name": "nbf",
				"displayName": "Time when the room will be available",
        "type": "date",
				 "helpText": "If not set, users will be able to join a room as soon as it is created."
      },
      {
        "name": "exp",
				 "displayName": "Time when the room will expire",
        "type": "date",
				 "helpText": "If not set, users will be able to join this room until deleted."
      },
      {
        "name": "enable_prejoin_ui",
				 "displayName": "Enable Prejoin UI",
        "type": "boolean",
        "default": true
      },
      {
        "name": "enable_chat",
				 "displayName": "Enable Chat",
        "type": "boolean",
        "default": true
      },
        {
        "name": "owner_only_broadcast",
				 "displayName": "Owner Only Broadcast",
        "type": "boolean",
        "default": false,
				 "helpText": "If enabled, only meeting owners are allowed to turn on camera, unmute mic, and share screen."
      },
      {
        "name": "enable_knocking",
				 "displayName": "Enable Knocking",
        "type": "boolean",
        "default": true,
				 "helpText": "For private rooms. Participants without corresponding meeting tokens can request admission from a meeting owner."
      },
      {
        "name": "start_video_off",
				 "displayName": "Start Video Off",
        "type": "boolean",
        "default": false
      },
      {
        "name": "start_audio_off",
				 "displayName": "Start Audio Off",
        "type": "boolean",
        "default": false
      },
        {
						"name": "editCreateRoomButton",
            "displayName": "Show button styles",
            "type": "boolean",
            "default": false
        },
        {
          "name": "createText",
          "displayName": "Button text",
          "type": "text",
					"default": "CREATE ROOM",
          "enabled": {
            "editCreateRoomButton": true
          },
          "styles": {
            "fontFamily": "@body",
            "fontWeight": 600,
            "color": "@contrast:createBackgroundColor"
          }
        },
       {
          "name": "createBackgroundColor",
          "displayName": "Button color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "editCreateRoomButton": true
          }
          
        },
        {
          "name": "createBorderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "editCreateRoomButton": true
          }
        },
        {
          "name": "createRounding",
          "displayName": "Create Room button rounding",
          "type": "number",
          "default": 4,
          "enabled": {
            "editCreateRoomButton": true
          },
          "control": { "type": "slider", "max": 20, "min": 0 }
        },
      {
        "name": "roomCreated",
        "displayName": "Additional actions after a room is created",
        "type": "action",
        "arguments": [
          {
            "type": "text",
						"name": "name",
            "displayName": "name"
          },
          {
            "type": "text",
							"name": "roomUrl",
            "displayName": "room url"
          },
						{
            "type": "text",
							"name": "id",
            "displayName": "id"
          },
					{
            "type": "text",
							"name": "privacy",
            "displayName": "privacy"
          },
						{
            "type": "boolean",
						 "name": "enable_chat",
            "displayName": "enabled chat"
          },
					{
            "type": "boolean",
						 "name": "owner_only_broadcast",
            "displayName": "owner only broadcast"
          },
						{
            "type": "boolean",
						 "name": "start_video_off",
            "displayName": "start video off"
          },
					{
            "type": "boolean",
						 "name": "start_audio_off",
            "displayName": "start audio off"
          },
					{
            "type": "boolean",
						 "name": "enable_knocking",
            "displayName": "enabled knocking"
          }
        ]
      }
      ]
    },
    {
      "name": "createMeetingTokenButton",
      "displayName": "Create Meeting Token",
      "props": [{
        "name": "enabled",
        "type": "boolean",
        "default": false
      },
      {
        "name": "room_name",
				 "displayName": "Room Name",
        "type": "text"
      },
      {
        "name": "username",
				 "displayName": "Username",
        "type": "text"
      },
      {
        "name": "is_owner",
				 "displayName": "Is Owner",
        "type": "boolean",
        "default": false
      },
      {
        "name": "start_video_off_t",
				 "displayName": "Start Video Off",
        "type": "boolean",
        "default": false
      },
      {
        "name": "start_audio_off_t",
				 "displayName": "Start Audio Off",
        "type": "boolean",
        "default": false
      },
      {
        "name": "editMeetingToken",
        "displayName": "Show button styles",
        "type": "boolean",
        "default": false
    },
    {
      "name": "tokenText",
      "displayName": "Button text",
      "type": "text",
      "default": "CREATE MEETING TOKEN",
      "enabled": {
        "editMeetingToken": true
      },
      "styles": {
        "fontFamily": "@body",
        "fontWeight": 600,
        "color": "@contrast:tokenBackgroundColor"
      }
    },
   {
      "name": "tokenBackgroundColor",
      "displayName": "Button color",
      "type": "color",
      "default": "@primary",
      "enabled": {
        "editMeetingToken": true
      }
      
    },
    {
      "name": "tokenBorderColor",
      "displayName": "Border Color",
      "type": "color",
      "default": "@primary",
      "enabled": {
        "editMeetingToken": true
      }
    },
    {
      "name": "tokenRounding",
      "displayName": "Button rounding",
      "type": "number",
      "default": 4,
      "enabled": {
        "editMeetingToken": true
      },
      "control": { "type": "slider", "max": 20, "min": 0 }
    },
      {
        "name": "meeting_token_created",
        "displayName": "Additional actions after a meeting token is created.",
        "type": "action",
        "arguments": [
          {
            "type": "text",
            "displayName": "token"
          }
        ]
      }
      ]
    },
    {
      "name": "deleteRoomButton",
      "displayName": "Delete Room Button",
      "props": [{
        "name": "enabled",
        "type": "boolean",
        "default": false
      },
      {
        "name": "room_name_d",
				 "displayName": "Room Name",
        "type": "text"
      },
      {
        "name": "editDeleteButton",
        "displayName": "Show button styles",
        "type": "boolean",
        "default": false
    },
      {
        "name": "deleteText",
        "displayName": "Button text",
        "type": "text",
        "default": "DELETE ROOM",
        "enabled": {
          "editDeleteButton": true
        },
       "styles": {
          "fontFamily": "@body",
          "fontWeight": 600,
          "color": "@contrast:deleteBackgroundColor"
        }
      },
     {
        "name": "deleteBackgroundColor",
        "displayName": "Button color",
        "type": "color",
        "enabled": {
          "editDeleteButton": true
        },
        "default": "@primary"
      },
      {
        "name": "deleteBorderColor",
        "displayName": "Border Color",
        "type": "color",
        "enabled": {
          "editDeleteButton": true
        },
        "default": "@primary"
      },
      {
        "name": "deleteRounding",
        "displayName": "Button rounding",
        "type": "number",
        "default": 4,
        "enabled": {
          "editDeleteButton": true
        },
        "control": { "type": "slider", "max": 20, "min": 0 }
      },
      {
        "name": "room_deleted",
        "displayName": "Additional actions after a room is deleted.",
        "type": "action"
      }
      ]
    },
    {
      "name": "updateRoomSettingsButton",
